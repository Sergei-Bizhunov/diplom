@model AccountingWorksIinstruments.Web.Models.DeliveryNoteViewModel

@{
    ViewData["Title"] = "CreateDeliveryNote";
}

<h1 class="text-center">Создание новой заявки</h1>

@*<h4>DeliveryNoteViewModel</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateDeliveryNote" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumberOfDeliveryNote" class="control-label text-white"></label>
                <input asp-for="NumberOfDeliveryNote" class="form-control" />
                <span asp-validation-for="NumberOfDeliveryNote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarsNumber" class="control-label text-white"></label>
                <input asp-for="CarsNumber" class="form-control" />
                <span asp-validation-for="CarsNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryDate" class="control-label text-white"></label>
                <input asp-for="DeliveryDate" class="form-control" />
                <span asp-validation-for="DeliveryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destination" class="control-label text-white"></label>
                @*<input asp-for="Destination" class="form-control" />*@
                <span asp-validation-for="Destination" class="text-danger"></span>
                @Html.DropDownList("Destination", ViewBag.Locations as SelectList, new { id = "nameOfLocation" })

            </div>
            <div class="form-group">
                <label asp-for="Worker" class="control-label text-white"></label>
                @*<input asp-for="Worker" class="form-control" />*@
                <span asp-validation-for="WorkerId" class="text-danger"></span>
                @Html.DropDownList("WorkerId", ViewBag.Workers as SelectList, new { id = "userName" })
            </div>

            <table class="table">
                <thead class="text-white">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.AvailableTools.FirstOrDefault().Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AvailableTools.FirstOrDefault().Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AvailableTools.FirstOrDefault().StatusDiscription)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AvailableTools.FirstOrDefault().PosterImageUrl)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="text-white">
                    @foreach (var item in Model.AvailableTools)
                    {
                        @if (item.MarkForShipment == true)
                        {
                            <tr style="background-color:greenyellow; color:black">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StatusDiscription)
                                </td>
                                <td>
                                    <img src="@item.PosterImageUrl" style="width:100px" />
                                </td>
                                <td>
                                    @Html.ActionLink("Add to List", "AddToToolForShipmentList", new { toolId = item.Id }) |
                                </td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StatusDiscription)
                                </td>
                                <td>
                                    <img src="@item.PosterImageUrl" style="width:100px" />
                                </td>
                                <td>
                                    @Html.ActionLink("Add to List", "AddToToolForShipmentList", new { toolId = item.Id }) |
                                </td>
                            </tr>
                        }

                    }
                </tbody>
            </table>
            <table class="table">
                <thead class="text-white">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ToolForShipment.FirstOrDefault().Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ToolForShipment.FirstOrDefault().Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ToolForShipment.FirstOrDefault().StatusDiscription)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ToolForShipment.FirstOrDefault().PosterImageUrl)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="text-white">
                    @foreach (var item in Model.ToolForShipment)
                    {
                        @if (item.MarkForShipment == true)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StatusDiscription)
                                </td>
                                <td>
                                    <img src="@item.PosterImageUrl" style="width:100px" />
                                </td>
                                <td>
                                    @Html.ActionLink("Remove", "RemoveFromToolForShipmentList", new { toolId = item.Id }) |
                                </td>
                            </tr>
                        }
                    }

                </tbody>
                <div>
                    <button id="btnPrint" class="btn btn-outline-light ignoreForPdf">Print</button>
                </div>
            </table>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-outline-light text-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<div>
    <button id="btnPrint" class="btn btn-outline-light ignoreForPdf">Print</button>
</div>


<script type="text/javascript">
    $(function() {
        $('#nameOfLocation').change(function()
        {
            var id = $(this).val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetItemsPartials")/' + id,
                success: function (data) {
                    $('#userName').replaceWith(data);
                }
            });
        });
    })
</script>

<script src="~/js/jquery/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#btnPrint").click(function () {
            $(".ignoreForPdf").hide();
            window.print();
            $(".ignoreForPdf").show();
        });
    });
</script>