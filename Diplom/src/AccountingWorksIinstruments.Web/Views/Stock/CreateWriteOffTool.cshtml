                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusDiscription)
                    </td>
                    <td>
                        <img src="@item.PosterImageUrl" style="width:100px" />
                    </td>
                    <td>
                        @Html.ActionLink("Add to List", "AddToWriteOffList", new { toolId = item.Id }) |
                    </td>
                </tr>
            }
