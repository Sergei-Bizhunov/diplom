@model AccountingWorksIinstruments.Web.Models.ToolViewModel

@{
    ViewData["Title"] = "ChangeOwner";
}

<h1>ChangeOwner</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeOwner">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" type="hidden">
                <input type="hidden" asp-for="Id" class="form-control" />
                <span type="hidden" asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @*<div class="form-group">
            <label asp-for="LocationId" class="control-label"></label>
            <input asp-for="LocationId" class="form-control" />
            <span asp-validation-for="LocationId" class="text-danger"></span>
        </div>*@
            <div>
                <label asp-for="NameOfLocation" class="control-label">Name of the Organization</label>
                @Html.DropDownList("NameOfLocation", ViewBag.Locations as SelectList, new { id = "nameOfLocation" })
            </div>
            <div>
                <label asp-for="StatusDiscription" class="control-label">Status</label>
                @Html.DropDownList("StatusDiscription", ViewBag.Status as SelectList, new { id = "statusDiscription" })
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                @*@Html.ActionLink("Update Tool", "UpdateTool", "Tool", new {id = Model.Id})*@
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Tool" asp-controller="Tool">Back to List</a>
</div>

<script type="text/javascript">
    $(function() {
        $('#nameOfLocation').change(function()
        {
            var id = $(this).val();
            $.ajax({
                type:'GET',
                url: '@Url.Action("GetItemsPartial")/' + id
                succes: function (data) {
                    $('#statusId').replaceWith(data);
                }
            });
        });
    })
</script>