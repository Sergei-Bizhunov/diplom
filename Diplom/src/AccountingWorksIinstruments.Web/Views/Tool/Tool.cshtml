@model IEnumerable<AccountingWorksIinstruments.Web.Models.ToolViewModel>

@{
    ViewData["Title"] = "Tool";
}

<h1 class="text-center">Инструменты</h1>

<p>
    <a asp-action="CreateTool">Создать новый инструмент</a>
</p>
<table class="table">
    <thead class="text-white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
                <label class="control-label text-white">Название</label>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
                <label class="control-label text-white">Описание</label>
            </th>
            @*<th hidden>
            @Html.DisplayNameFor(model => model.LocationId)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.NameOfLocation)
            <label class="control-label text-white">Местоположение</label>
        </th>
            @*<th>
            @Html.DisplayNameFor(model => model.StatusId)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.StatusDiscription)
            <label class="control-label text-white">Состояние инструмента</label>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
            <label class="control-label text-white">Владелец</label>
        </th>
            <th>
                Картинка
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="text-white">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            @*<td hidden>
            @Html.DisplayFor(modelItem => item.LocationId)
        </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.NameOfLocation)
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.StatusId)
        </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.StatusDiscription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                <img src="@item.PosterImageUrl" style="width:100px"/>
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateTool", new { id = item.Id }) |
                @Html.ActionLink("Details", "GetByIdTool", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteTool", new { id = item.Id }) |
                @Html.ActionLink("ChangeOwner", "ChooseWorkers","Stock", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
