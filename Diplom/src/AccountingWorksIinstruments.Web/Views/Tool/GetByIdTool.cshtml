@model IEnumerable<AccountingWorksIinstruments.Web.Models.ToolViewModel>

@{
    ViewData["Title"] = "GetByIdTool";
}

<h1 class="text-center">Информация о инструменте</h1>

<div>
    @*<h4>ToolViewModel</h4>*@
    <hr />
    <dl class="row text-white">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstOrDefault().Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstOrDefault().Description)
        </dd>
        @*<dt hidden class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LocationId)
        </dt>*@
        <dd hidden class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstOrDefault().LocationId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameOfLocation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstOrDefault().NameOfLocation)
        </dd>
    </dl>
</div>
<div class="form-group btn btn-outline-light">
    @Html.ActionLink("Edit", "UpdateTool", new {  id = Model.FirstOrDefault().Id }) 
</div>
<div class="form-group btn btn-outline-light">
    <a asp-action="Tool" asp-controller="Tool">Back to List</a>
</div>
